{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Loop Visualizer",
  "version": "0.1.0",
  "identifier": "com.loop.visualizer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Loop Visualizer",
        "width": 1280,
        "height": 820,
        "resizable": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: filesystem:; media-src 'self' asset: data: filesystem:; connect-src 'self' http://localhost:1420 https://tauri.localhost;",
      "capabilities": ["default"],
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": ["icons/icon.icns"],
    "externalBin": ["ffmpeg"]
  }
}
